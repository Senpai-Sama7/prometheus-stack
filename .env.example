# PROMETHEUS Configuration

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/prometheus
AUDIT_LOG_PATH=./audit_logs

# LLM Configuration
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# Gate Configuration
UNCERTAINTY_DEFER_THRESHOLD=0.75
UNCERTAINTY_EXPLAIN_THRESHOLD=0.50
EVIDENCE_CONFIDENCE_THRESHOLD=0.60

# MCP Configuration
MCP_STDIO_ENABLED=true
MCP_HTTP_ENABLED=true
MCP_HTTP_ALLOWED_ORIGINS=http://localhost:3000,https://app.example.com

# Guardian Agent
GUARDIAN_AGENT_MODEL=gpt-4
GUARDIAN_THREAT_THRESHOLD=0.70

# Measurement
MMM_ENABLED=true
MTA_ENABLED=true
INCREMENTALITY_TEST_ENABLED=true
HOLDOUT_SIZE_PERCENT=10

# Logging
LOG_LEVEL=INFO
AUDIT_LOG_FORMAT=json
